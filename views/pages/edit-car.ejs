<%- include('../layout/head.ejs') %>
<div class="edit-car-page-container" >
    <div class="edit-car-fit-container">
        <div class="edit-car-form-container">
            <h1>Edit Electric Car</h1>
            <form action="/updatecar?_csrf=<%= csrfToken %>" method="post" class="edit-car-form" enctype="multipart/form-data">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="carId" value="<%= car._id %>" >
                <div class="form-input">
                    <label for="car-name">Car Name</label>
                    <input type="text" id="car-name" name="carname" required placeholder="enter car name..." maxlength="25" minlength="3" value="<%= car.name %>" >
                </div>
                <div class="form-input">
                    <label for="manufacturer">Manufacturer</label>
                    <input type="text" id="manufacturer" name="manufacturer" required placeholder="name of manufacturer..." maxlength="25" minlength="2" value="<%= car.manufacturer %>" >
                </div>
                <div class="form-input">
                    <label for="model-year">Model Year</label>
                    <input type="number" id="model-year" name="modelyear" required placeholder="select model year..." min="1995" max="2022" step="1" value="<%= car.modelYear %>" >
                </div>
                <div class="form-input">
                    <label for="car-battery">Battery Size (Kwh)</label>
                    <input type="number" step="0.01" min="17.6" max="118.0" name="carbattery" placeholder="select battery size..." id="car-battery" required value="<%= car.batterySize %>" >
                </div>
                <div class="form-input">
                    <label for="car-WLTP-range">WLTP Range (km)</label>
                    <input type="number" step="0.01" min="49.9" max="487.0" name="wltprange" placeholder="select Wltp range..." id="car-WLTP-range" required value="<%= car.wltpRange %>" >
                </div>
                <div class="form-input">
                    <label for="car-cost">Cost</label>
                    <input type="number" step="0.01" min="24946.33" max="2900000.00" name="carcost" placeholder="select car cost..." id="car-cost" required value="<%= car.carCost %>" >
                </div>
                <div class="form-input">
                    <label for="car-power">Power (Kw) </label>
                    <input type="number" step="1" min="110" max="595" name="carpower" placeholder="select car power..." id="car-power" required value="<%= car.carPower %>">
                </div>
                <div class="form-input">
                    <label for="car-image">Select car-image </label>
                    <input type="file" name="carimage" id="car-image" accept="image/png, image/jpg, image/jpeg">
                </div>
                <div class="form-car-image">
                    <img src="<%= car.carImage %>" alt="" width="200" height="200" >
                </div>
                <button type="submit" class="submit-btn" >submit</button>
            </form>
        </div>
    </div>
</div>
<%- include('../layout/tail.ejs') %> 